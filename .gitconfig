[user]
	name = Kuldeep Aggarwal
	email = kuldeep.a.aggarwal@gmail.com
[core]
	excludesfile = ~/.gitignore_global
	commitGraph = true
[diff]
	algorithm = patience
[gc]
	writeCommitGraph = true
[protocol]
	version = 2
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
[rebase]
	autostash = true
[remote "origin"]
	prune = true
[color]
	ui = auto
	branch = auto
	status = auto
	diff = always
[init]
	defaultBranch = main
[alias]
	kdlog = log --graph -n 10 --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
